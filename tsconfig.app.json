{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app"
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/main.ts",
    "src/**/*.js",
    "src/main.server.ts",
    "app/**/*.ts",
    "app/**/*.js",
    "app/**/*.d.ts",
    "app/**/*.html",
    "app/**/*.css",
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ],
}